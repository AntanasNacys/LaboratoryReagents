<UserControl x:Class="LaboratoryReagents.UI.FindReagentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryReagents.UI"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="550">
    <Grid>
        <StackPanel>
            <TextBlock Text="Choose reagent" 
                       TextAlignment="Center"
                       Height="30"
                       Width="150"
                       Margin="0 10 0 0"
                       FontSize="16"
                       FontWeight="DemiBold"></TextBlock>
            <ComboBox x:Name="comboBoxChooseReagent" 
                      Width="150"
                      Height="30"
                      Margin="0 10 0 0"
                      SelectionChanged="comboBoxChooseReagent_SelectionChanged">
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
